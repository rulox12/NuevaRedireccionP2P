
@{
    ViewBag.Title = "CrearTransaccion";
}

<form action="CrearTransaccion" method="post">
    <div class="form-group">
        <label for="exampleInputEmail1">Correo electronico</label>
        <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" placeholder="Ingresa Correo">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Nombre</label>
        <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Nombre">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Apellido</label>
        <input type="text" class="form-control" id="apellido" name="apellido" placeholder="Apellido">
    </div>
    <div class="form-check">
        <label class="form-check-label" for="exampleCheck1">Eres el titular de la tarjeta?</label>
        <input type="checkbox" class="form-check-input" id="apellido" name="espagador">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

