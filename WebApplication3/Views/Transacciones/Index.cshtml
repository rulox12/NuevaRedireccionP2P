@model IEnumerable<WebApplication2.Models.Transaccion>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301867">Learn more &raquo;</a></p>

<table class="table">
    <tr>
        <th>
            Fecha
        </th>
        <th>
            Referencia
        </th>
        <th>
            Estado
        </th>
        <th>
            Autorizacion
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    if (item.transaccionOk)
    {
        
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.referencia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.estadotransaccion)
        </td>


        <td>
            @Html.DisplayFor(modelItem => item.Autorizacion)
        </td>

    </tr>
    }
}

</table>
<div class="container">
    <br /><br />
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
            <center><h1 style="color:#ff6a00;font-weight:bold;">Buscador de clientes</h1></center>
            <center><h3 style="color:#ff6a00;">Ingrese identificación:</h3></center>
        </div>
        <br />
        <form action="/Clientes/Create" method="get">
            <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
                <center>
                    @Html.AntiForgeryToken()
                    <input type="text" id="identificacion" name="identificacion" onkeypress="return justNumbers(event);" />
                    <input type="button" style="background-color:#ff6a00;color:white;border-color:#ff6a00" id="sendI" value="Buscar" />

                </center>
            </div>
            <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
                <center>
                    <div id="ans">

                    </div>
                </center>
            </div>
        </form>
    </div>
</div>
